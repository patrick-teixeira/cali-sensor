<%- include('navbar/navbar-after-login') %>

<!-- Conteúdo da página index -->
<% if (name) { %>
    <div class="greeting-container">
        <h1 class="greeting">Hi <%= name %></h1>
    </div>

    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500&display=swap" rel="stylesheet" />
        <script src="https://unpkg.com/@phosphor-icons/web"></script>
        <style>
            .greeting-container {
                width: 100%;
                display: flex;
                justify-content: center;
                align-items: center;
                padding: 1rem 0;
            }

            .greeting {
                font-size: 2rem;
                color: #141a39;
                text-transform: uppercase;
                text-align: center;
                margin: 1rem 0;
                word-wrap: break-word;
            }

            @media (max-width: 740px) {
                .greeting {
                    font-size: 1.7rem;
                }
            }

            @media (max-width: 500px) {
                .greeting {
                    font-size: 1.4rem;
                }
            }

            @media (max-width: 390px) {
                .greeting {
                    font-size: 1.2rem;
                }
            }

            * {
                font-family: 'Rubik', sans-serif;
                margin: 0;
                padding: 0;
                box-sizing: border-box;
            }

            body {
                min-height: 100vh;
                width: 100%;
                background-color: #fbfaff;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: flex-start;
                padding-top: 70px; /* Espaço para a navbar fixa */
            }

            .navbar {
                width: 100%;
                height: 7.5%;
                position: fixed;
                top: 0;
                z-index: 1000;
                background-color: #fff; /* Cor de fundo da navbar */
                box-shadow: 0px 4px 2px -2px gray; /* Sombra para a navbar */
            }

            .container {
                display: flex;
                align-items: center;
                justify-content: center;
                flex-grow: 1;
                width: 100%;
                padding: 20px; /* Espaçamento ao redor do conteúdo principal */
            }

            main {
                width: 90%;
                max-width: 40rem;
                background-color: #ffffff;
                box-shadow: 0px 5px 15px 8px #e4e7fb;
                display: flex;
                flex-direction: column;
                align-items: center;
                border-radius: 0.5rem;
                padding: 2rem;
            }

            #header {
                width: 100%;
                display: flex;
                align-items: center;
                justify-content: space-between;
            }

            h1 {
                font-size: 1.7rem;
                color: #141a39;
                text-transform: uppercase;
                cursor: default;
                margin-top: 5%;
            }

            #leaderboard {
                width: 100%;
                position: relative;
            }

            table {
                width: 100%;
                border-collapse: collapse;
                table-layout: fixed;
                color: #141a39;
                cursor: default;
            }

            tr {
                transition: all 0.2s ease-in-out;
                border-radius: 0.2rem;
            }

            tr:not(:first-child):hover {
                background-color: #fff;
                transform: scale(1.1);
                box-shadow: 0px 5px 15px 8px #e4e7fb;
            }

            tr:nth-child(odd) {
                background-color: #f9f9f9;
            }

            tr:nth-child(1) {
                color: #fff;
            }

            td {
                height: 5rem;
                font-size: 1.4rem;
                padding: 1rem 2rem;
                position: relative;
            }

            .number {
                width: 1rem;
                font-size: 2.2rem;
                font-weight: bold;
                text-align: left;
            }

            .name {
                text-align: left;
                font-size: 1.2rem;
            }

            .points {
                font-weight: bold;
                font-size: 1.3rem;
                display: flex;
                justify-content: flex-end;
                align-items: center;
            }

            .points:first-child {
                width: 10rem;
            }

            .gold-medal {
                height: 3rem;
                margin-left: 1.5rem;
            }

            .ribbon {
                width: 100%;
                max-width: 42rem;
                height: 5.5rem;
                top: -0.5rem;
                background-color: #5c5be5;
                position: absolute;
                left: 0;
                box-shadow: 0px 15px 11px -6px #7a7a7d;
            }

            .ribbon::before,
            .ribbon::after {
                content: "";
                height: 1.5rem;
                width: 1.5rem;
                bottom: -0.8rem;
                transform: rotate(45deg);
                background-color: #5c5be5;
                position: absolute;
                z-index: -1;
            }

            .ribbon::before {
                left: 0.35rem;
            }

            .ribbon::after {
                right: 0.35rem;
            }

            #buttons {
                width: 100%;
                margin-top: 3rem;
                display: flex;
                justify-content: center;
                gap: 2rem;
            }

            .exit {
                width: 11rem;
                height: 3rem;
                font-size: 1.3rem;
                text-transform: uppercase;
                color: #7e7f86;
                border: 0;
                background-color: #fff;
                border-radius: 2rem;
                cursor: pointer;
            }

            .exit:hover {
                border: 0.1rem solid #5c5be5;
            }

            .continue {
                width: 11rem;
                height: 3rem;
                font-size: 1.3rem;
                color: #fff;
                text-transform: uppercase;
                background-color: #5c5be5;
                border: 0;
                border-bottom: 0.2rem solid #3838b8;
                border-radius: 2rem;
                cursor: pointer;
            }

            .continue:active {
                border-bottom: 0;
            }

            /* Ajustes responsivos */
            @media (max-width: 740px) {
                main {
                    padding: 1rem;
                }

                h1 {
                    font-size: 1.5rem;
                }

                td {
                    font-size: 1.2rem;
                }

                .exit, .continue {
                    width: 9rem;
                    height: 2.5rem;
                    font-size: 1.1rem;
                }
                
                .number {
                    font-size: 1.8rem;
                }
                
                .name {
                    font-size: 1rem;
                }
                
                .points {
                    font-size: 1.1rem;
                }
            }

            @media (max-width: 500px) {
                main {
                    padding: 0.5rem;
                }

                h1 {
                    font-size: 1.3rem;
                }

                td {
                    font-size: 1rem;
                }

                .exit, .continue {
                    width: 7rem;
                    height: 2rem;
                    font-size: 1rem;
                }
                
                .number {
                    font-size: 1.6rem;
                }
                
                .name {
                    font-size: 0.9rem;
                }
                
                .points {
                    font-size: 1rem;
                }
            }

            @media (max-width: 390px) {
                main {
                    padding: 0.25rem;
                }

                h1 {
                    font-size: 1.1rem;
                }

                td {
                    font-size: 0.8rem;
                }

                .exit, .continue {
                    width: 5rem;
                    height: 1.5rem;
                    font-size: 0.8rem;
                }
                
                .number {
                    font-size: 1.4rem;
                }
                
                .name {
                    font-size: 0.7rem;
                }
                
                .points {
                    font-size: 0.8rem;
                }
            }

        </style>
    </head>
    <body>
        <div class="container">
            <main>
                <div id="header">
                    <h1>Ranking</h1>
                    <!-- <button class="share">
                        <i class="ph ph-share-network"></i>
                    </button> -->
                </div>
                <div id="leaderboard">
                    <div class="ribbon"></div>
                    <table>
                        <tbody id="leaderboard-body">
                            <!-- Conteúdo dinâmico do ranking -->
                        </tbody>
                    </table>
                </div>
            </main>
        </div>
        <script>
            document.addEventListener('DOMContentLoaded', async function () {
                try {
                    const response = await fetch('/rankingg');
                    const ranking = await response.json();
                    const leaderboardBody = document.getElementById('leaderboard-body');
                    
                    ranking.forEach((entry, index) => {
                        const row = `
                            <tr>
                                <td class="number">${index + 1}</td>
                                <td class="name">${entry.email}</td>
                                <td class="points">${entry.total_flexoes}</td>
                            </tr>
                        `;
                        leaderboardBody.innerHTML += row;
                    });
                } catch (error) {
                    console.error('Error fetching ranking data:', error);
                }
            });
        </script>
    </body>
    </html>
<% } %>
